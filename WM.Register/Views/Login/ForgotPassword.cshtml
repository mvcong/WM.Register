@model WM.Register.Models.srv_VNOGateWay_Merchant
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h4>Enter your email.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="merchant_email" class="form-control" />
                <span asp-validation-for="merchant_email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Get Link</button>
        </form>
    </div>
</div>

