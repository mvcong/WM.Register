@model WM.Register.Models.srv_VNOGateWay_Merchant
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>ResetPassword</h2>
@using (Html.BeginForm("ResetPassword", "Login",FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label">New Password</label>
            <input name="password" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Confirm Password</label>
            <input name="confirmPassword" class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Rest Password</button>
        </div>
    </div>
}
